// Importa el JSON directamente de emol_emprendedores_full
import todasLasNoticias from '../data/emol_emprendedores_full.json';
// ¡NUEVO! Importa el JSON de CMS Consultores
import cmsConsultoresNewsData from '../data/cms_consultores_news.json';

// Define tus palabras clave de filtro para las noticias existentes (puedes añadir o quitar las que quieras)
const palabrasClaveFiltro = [
  'pyme',
  'emprendedor',
  'emprendimiento',
  'negocio',
  'microempresa',
  'startup',
  'start-up',
  'tecnología',
  'innovación',
  'digital',
  'venture',
  'fundador',
  'inversión',
  'rondadeinversión',
  'capital'
];

// Filtra las noticias existentes por palabras clave
const noticiasFiltradas = todasLasNoticias.filter(noticia => {
  // Convierte el título a minúsculas para una búsqueda sin distinción de mayúsculas
  const tituloEnMinusculas = noticia.titulo.toLowerCase();

  // Comprueba si alguna de las palabras clave está en el título
  return palabrasClaveFiltro.some(palabra => tituloEnMinusculas.includes(palabra.toLowerCase()));
});

// Toma solo las primeras 6 noticias filtradas para la sección existente
const noticias = noticiasFiltradas.slice(0, 6);

// ¡NUEVO! Prepara las noticias de CMS Consultores - AHORA SIN FILTRO NI LÍMITE DE CANTIDAD
const cmsConsultoresNews = cmsConsultoresNewsData;
